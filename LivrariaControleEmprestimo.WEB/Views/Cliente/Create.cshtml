@model LivrariaControleEmprestimo.DATA.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1>Novo Usuário</h1>

<h4>Preencha os campos abaixo para efetuar o cadastro</h4>
<hr />
<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
<br/>
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     <div class="card">
        <div class="card-header">Dados Pessoais</div>
            <div class="card-body row">

                <div class="col-md">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Cpf" class="control-label"></label>
                            <input asp-for="Cpf" class="form-control" />
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Ddd" class="control-label"></label>
                                <input asp-for="Ddd" class="form-control" />
                                <span asp-validation-for="Ddd" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

    </div>

<br/>
    <div class="card">
        <div class="card-header">Endereço</div>
        <div class="card-body row">
            <div class="form-group">
                 <label asp-for="Estado" class="control-label"></label>
                 <input asp-for="Estado" class="form-control" />
                 <span asp-validation-for="Estado" class="text-danger"></span>
             </div>
            <div class="col-md">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Cidade" class="control-label"></label>
                        <input asp-for="Cidade" class="form-control" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Bairro" class="control-label"></label>
                        <input asp-for="Bairro" class="form-control" />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md">
                 <div class="card-body">
                     <div class="form-group">
                         <label asp-for="Logradouro" class="control-label"></label>
                         <input asp-for="Logradouro" class="form-control" />
                         <span asp-validation-for="Logradouro" class="text-danger"></span>
                     </div>
                  </div>
            </div>
            <div class="col-md">
                 <div class="card-body">
                     <div class="form-group">
                         <label asp-for="Cep" class="control-label"></label>
                         <input asp-for="Cep" class="form-control" />
                         <span asp-validation-for="Cep" class="text-danger"></span>
                     </div>
                 </div>
            </div>
                    <div class="col-md">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Numero" class="control-label"></label>
                                <input asp-for="Numero" class="form-control" />
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


        </div>
    </div>   
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
